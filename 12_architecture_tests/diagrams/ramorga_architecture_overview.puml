@startuml
title RAMORGA — Top-Level Architecture Overview

skinparam packageStyle rectangle
skinparam rectangle {
  BackgroundColor #f9f9f9
  BorderColor #555
  RoundCorner 10
}

rectangle "Field Layer\n(superposition, multidimensional field)" as FIELD
rectangle "Measurement Layer\n(user intent, measurement vector" as MEAS
rectangle "Reduction Layer\n(zapis, linearization)" as RED
rectangle "Descent Layer\n(dimensional simplification)" as DESC
rectangle "Integrity Layer\n(deformation detection)" as INT
rectangle "Bridge Layer\n(human interface, semantic bridge)" as BRIDGE
rectangle "Relational Layer\n(agency, symmetry, constellation)" as REL
rectangle "Thesis Layer\n(end-to-end invariant validation)" as THESIS

FIELD --> MEAS
MEAS --> RED
RED --> DESC
DESC --> INT
INT --> BRIDGE
BRIDGE --> REL
REL --> THESIS

