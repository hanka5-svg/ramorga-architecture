INV10 --> FIELD
INV10 --> MEAS
INV10 --> RED
INV10 --> DESC
INV10 --> INT
INV10 --> BRIDGE
INV10 --> REL
INV10 --> THESIS

SEM_INV --> REL
SEM_INV --> CCORE
SEM_INV --> CLC

USCA_INV --> REL
USCA_INV --> CCORE
USCA_INV --> CLC

REL --> CCORE
